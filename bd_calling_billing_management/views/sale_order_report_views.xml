<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_custom_print" model="ir.ui.view">
        <field name="name">sale.order.form.custom.print</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_print_custom_quotation" type="object" string="PDF without Test" class="btn-secondary"/>
            </xpath>
        </field>
    </record>
    <record id="view_invoice_form_custom_print" model="ir.ui.view">
        <field name="name">account.move.form.custom.print</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <!-- <button name="action_print_custom_quotation" type="object" string="PDF without Test" class="btn-secondary"/>
                <button name="action_print_with_test" type="object" string="PDF with Test" 
                    class="btn-primary" title="Print in standard layout with test fields"/> -->
            </xpath>
            
        </field>
    </record>
    
</odoo>