<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form_inherit_test_fields" model="ir.ui.view">
        <field name="name">account.move.form.inherit.test.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- More specific XPath targeting the list view inside invoice_line_ids -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="after">
                <field name="test_per_unit" readonly="1"/>
                <field name="total_test" readonly="1"/>
                <field name="price_per_test" readonly="1"/>
            </xpath>
            
        </field>
    </record>
</odoo>