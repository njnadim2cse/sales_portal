<odoo>
<template id="report_with_test">
<t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Detect model type and use appropriate fields -->
                        <t t-set="is_invoice" t-value="doc._name == 'account.move'"/>
                        
                        <!-- Header Information Table -->
<table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;" border="1">
    <tr>
        <!-- Bill To Column (takes most space on left) -->
        <td style="padding: 8px; text-align: left; vertical-align: top; width: 60%;">
            <div style="font-weight: bold;">Bill To</div>
            <div>
                <strong><span t-field="doc.partner_id"/></strong><br/>
                <span t-field="doc.partner_id.street"/><br/>
                <span t-field="doc.partner_id.city"/>
            </div>
        </td>
        
        <!-- Right side columns for Date, Bill No., P/O No., Chalian No. -->
        <td style="padding: 8px; text-align: left; vertical-align: top; width: 40%;">
            <table style="width: 100%; border-collapse: collapse;">
                <!-- Date -->
                <tr>
                    <td style="padding: 4px; font-weight: bold; width: 30%;">Date</td>
                    <td style="padding: 4px; width: 70%;"><span t-field="doc.invoice_date"/></td>
                </tr>
                <!-- Bill No. -->
                <tr>
                    <td style="padding: 4px; font-weight: bold;">Bill No.</td>
                    <td style="padding: 4px;"><span t-field="doc.name"/></td>
                </tr>
                <!-- P/O No. -->
                <tr>
                    <td style="padding: 4px; font-weight: bold;">P/O No.</td>
                    <td style="padding: 4px;"><span t-field="doc.invoice_origin"/></td>
                </tr>
                <!-- Chalian No. -->
                <tr>
                    <td style="padding: 4px; font-weight: bold;">Chalian No.</td>
                    <td style="padding: 4px;"><span t-field="doc.custom_chalian_number"/></td>
                </tr>
            </table>
        </td>
    </tr>
</table>
    
                   
                    
                    <!-- Line Items with TEST FIELDS (Detailed) -->
                    <table style="width: 100%; border-collapse: collapse; border: 1px solid #ddd;">
                        <thead>
                            <tr style="background: #f8f9fa;">
                                <th style="padding: 10px; border: 1px solid #ddd;">Product</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Quantity</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Tests Per Unit</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Total Tests</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Price Per Test</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.invoice_line_ids" t-as="line">
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <strong><span t-field="line.product_id.name"/></strong><br/>
                                        <!-- <span t-field="line.name"/> -->
                                    </td>
                                     <td style="padding: 10px; border: 1px solid #ddd; text-align: center;">
                                            <span t-field="line.quantity"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: center;">
                                        <span t-field="line.test_per_unit"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: center;">
                                        <span t-field="line.total_test"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
                                        <span t-field="line.price_per_test"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    
                    <!-- Detailed Summary -->
                    <div style="float: right; width: 300px; margin-top: 20px;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <tr>
                                <td style="padding: 5px;">Subtotal:</td>
                                <td style="padding: 5px; text-align: right;"><span t-field="doc.amount_untaxed"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 5px;">Tax:</td>
                                <td style="padding: 5px; text-align: right;"><span t-field="doc.amount_tax"/></td>
                            </tr>
                            <tr style="border-top: 2px solid #000;">
                                <td style="padding: 5px;"><strong>Total:</strong></td>
                                <td style="padding: 5px; text-align: right;"><strong><span t-field="doc.amount_total"/></strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>