<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_backend_form_wrapper" name="Backend Form Wrapper">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="card">
                    <div class="card-body">
                        <h3><t t-esc="title"/></h3>

                        <form method="post" action="/sales_management/submit_task" class="mt-3">
                            <input type="hidden" name="task_team" t-att-value="team"/>
                            <t t-raw="form_html"/>
                            <div class="d-flex gap-2 mt-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <a href="/sales_management" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
