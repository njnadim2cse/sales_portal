<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contacts Module -->
    <record id="view_partner_form_inherit_contact_portal" model="ir.ui.view">
        <field name="name">res.partner.form.portal.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Remove the domain restriction to show all users -->
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
        </field>
    </record>
    <!-- Sales Module -->
    <record id="view_partner_form_inherit_salequotation_portal" model="ir.ui.view">
        <field name="name">sale.order.form.portal.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Remove the domain restriction to show all users -->
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
        </field>
    </record>
</odoo>