<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_task_management_list" model="ir.ui.view">
        <field name="name">task.management.list</field>
        <field name="model">task.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="task_title"/>
                <field name="task_team"/>
                <field name="employee_id"/>
                <field name="customer_id"/>
                <field name="visit_date"/>
                <field name="time_in_dt"/>
                <field name="time_out_dt"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_task_management_form" model="ir.ui.view">
        <field name="name">task.management.form</field>
        <field name="model">task.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="task_title"/>
                    </group>

                    <group>
                        <group>
                            <label for="task_team"/>
                            <div>
                                <field name="task_team" widget="radio" options="{'horizontal': true}"/>
                            </div>
                            <field name="employee_id"/>
                            <field name="designation" readonly="1"/>
                        </group>
                        <group>
                            <field name="customer_id"/>
                            <field name="company_id" readonly="1"/>
                            <field name="job_position" readonly="1"/>
                        </group>
                    </group>

                    <!-- VISIT INFORMATION SECTION -->
                    <group string="Visit Information">
                        <group>
                            <field name="visit_date"/>
                            <field name="time_in_dt" widget="datetime"/>
                            <field name="time_out_dt" widget="datetime"/>
                        </group>
                        <group>
                            <field name="purpose_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="analyzer"/>
                                <field name="reagents"/>
                                <field name="remarks"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_task_management_search" model="ir.ui.view">
        <field name="name">task.management.search</field>
        <field name="model">task.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_title"/>
                <field name="task_team"/>
                <field name="employee_id"/>
                <field name="customer_id"/>
                <field name="visit_date"/>
                <field name="purpose_id"/>
                
                <filter name="filter_sales" string="Sales" domain="[('task_team','=','sales')]"/>
                <filter name="filter_service" string="Service" domain="[('task_team','=','service')]"/>
                <filter name="filter_today" string="Today" domain="[('visit_date','=',context_today().strftime('%Y-%m-%d'))]"/>
                
                <filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
                <filter name="group_customer" string="Customer" context="{'group_by':'customer_id'}"/>
                <filter name="group_visit_date" string="Visit Date" context="{'group_by':'visit_date'}"/>
                <filter name="group_purpose" string="Purpose" context="{'group_by':'purpose_id'}"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_task_management" model="ir.actions.act_window">
        <field name="name">Task Management</field>
        <field name="res_model">task.management</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_task_management_search"/>
    </record>

</odoo>