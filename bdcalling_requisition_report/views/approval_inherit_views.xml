<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Alternative Method: Create/inherit a dedicated tree view for approval.product.line -->
    <record id="approval_product_line_tree_view_inherit" model="ir.ui.view">
        <field name="name">approval.product.line.tree.inherit</field>
        <field name="model">approval.product.line</field>
        <field name="inherit_id" ref="approvals.approval_product_line_view_tree"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='product_id']" position="before">
                <field name="product_category_id" 
                       options="{'no_create': True, 'no_open': True}" 
                       optional="show"/>
            </xpath>
            
            <!-- Add domain to product_id -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="domain">[('purchase_ok', '=', True), ('categ_id', '=', product_category_id)] if product_category_id else [('purchase_ok', '=', True)]</attribute>
            </xpath>
            
            
            <!-- Add after description field -->
            <field name="quantity" position="after">
                <field name="incoming_qty" string="Incoming Qty" optional="show"/>
                <field name="outgoing_qty" string="Outgoing Qty" optional="show"/>
                <field name="total_qty" string="Total Qty" optional="show"/>
            </field>
            
        </field>
    </record>

</odoo>