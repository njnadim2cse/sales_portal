<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_lc_management" name="LC Management" sequence="10"/>
    
    <!-- Action -->
    <record id="action_lc_order" model="ir.actions.act_window">
        <field name="name">Pro Forma Invoices</field>
        <field name="res_model">lc.order</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Menu Item -->
    <menuitem id="menu_lc_orders" name="Pro Forma Invoice" parent="menu_lc_management" sequence="10" action="action_lc_order"/>
    
<!-- List View -->
    <record id="view_lc_order_list" model="ir.ui.view">
        <field name="name">lc.order.list</field>
        <field name="model">lc.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" readonly="1"/>
                <field name="po_number"/>
                <field name="vendor_id"/>
                <field name="bank_id"/>
                <field name="pi_number"/>
                <field name="pi_date"/>
                <field name="lc_opening_date"/>
                <field name="payment_terms"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_lc_order_form" model="ir.ui.view">
        <field name="name">lc.order.form</field>
        <field name="model">lc.order</field>
        <field name="arch" type="xml">
            <form string="Pro Forma Invoice">
                <header>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                         <group>
                            <field name="po_number" readonly="0"/>
                            <field name="vendor_id"/>
                            <field name="bank_id"/>
                        </group>
                        <group>
                            <field name="pi_number"/>
                            <field name="pi_date"/>
                            <field name="lc_opening_date"/>
                            <field name="payment_terms"/>
                        </group>
                        
                    </group>
                    
                    <notebook>
                        <page string="Products">
                            <field name="lc_line_ids">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="product_category_id"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <!-- <field name="po_line_id" invisible="1"/> -->
                                </list>
                            </field>
                        </page>
                        <!-- <page string="Payment Terms">
                            <field name="payment_term_line_ids">
                                <list editable="bottom">
                                     <field name="description"/>
                                </list>
                            </field>
                        </page> -->
                         <page string="Payment Term Descriptions">
                            <field name="payment_term_line_ids">
                                <list editable="bottom">
                                    <field name="description" widget="text"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter Widget -->
                <chatter/> 
            </form>
        </field>
    </record>
</odoo>