<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Term Form View -->
    <record id="view_lc_payment_term_form" model="ir.ui.view">
        <field name="name">lc.payment.term.form</field>
        <field name="model">lc.payment.term</field>
        <field name="arch" type="xml">
            <form string="Payment Term">
                <sheet>
                  
                       
                           <h1> 
                           <field name="name"/>
                           </h1>
                            <!-- <field name="lc_order_id"/> -->
                       
                    
                    
                    <!-- Description Lines - Add a line -->
            <notebook>
                      <page string="Patment Terms line">
                        <field name="description_line_ids">
                            <list string="Description Lines" editable="bottom">
                                <field name="description"/>
                        </list>
                    </field>
                </page>
            </notebook>
        </sheet>
    <chatter/> 
</form>
</field>
    </record>

    <!-- Payment Term List View -->
    <record id="view_lc_payment_term_tree" model="ir.ui.view">
        <field name="name">lc.payment.term.tree</field>
        <field name="model">lc.payment.term</field>
        <field name="arch" type="xml">
            <list string="Payment Terms">
                <field name="name"/>
                <!-- <field name="lc_order_id"/> -->
            </list>
        </field>
    </record>

    <!-- Payment Term Action -->
    <record id="action_lc_payment_term" model="ir.actions.act_window">
        <field name="name">Payment Terms</field>
        <field name="res_model">lc.payment.term</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->

    
    <menuitem id="menu_lc_payment_term"
              name="Payment Terms"
              parent="menu_lc_management"
              action="action_lc_payment_term"
              sequence="20"/>
</odoo>